/* Estilos da barra de busca */
.my__projects{       
    color: var(--cor-botao);
    font-weight: bold;
    text-decoration: none;
}


.search__container {
    position: relative;
}

.search__input {
    background-color: transparent;
    border: 2px solid var(--cor-texto);
    border-radius: 20px;
    padding: 8px 20px;
    color: var(--cor-texto);
    font-family: var(--font-principal);
    font-size: 1em;
    outline: none;
    width: 150px;
    transition: all 0.3s ease;
}

.search__input::placeholder {
    color: var(--cor-texto);
    opacity: 0.7;
}

.search__input:focus {
    border-color: var(--cor-botao);
    width: 200px;
}

.search__container {
    position: relative;
    display: flex;
    align-items: center;
}

.search__icon {
    position: absolute;
    left: 15px;
    width: 18px;
    height: 18px;
    pointer-events: none;
    opacity: 0.7;
}

.search__input {
    background-color: transparent;
    border: 2px solid var(--cor-texto);
    border-radius: 20px;
    padding: 8px 20px 8px 45px; /* padding-left maior para a lupa */
    color: var(--cor-texto);
    font-family: var(--font-principal);
    font-size: 1em;
    outline: none;
    width: 150px;
    transition: all 0.3s ease;
}

/* Link ativo no menu */
.agents__active {
    color: var(--cor-botao) !important;
    font-weight: bold;
    text-decoration: none;
}

