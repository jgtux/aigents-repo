/* Main content - Grid de agents */
.main__agents {
    padding: 3em 2em;
    max-width: 1400px;
    margin: 0 auto;
}

.grid__agents {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2em;
}

/* Cards dos agents */
.card__agent {
    background-color: rgba(95, 98, 146, 0.2);
    border-radius: 12px;
    padding: 1.5em;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    transition: all 0.3s ease;
    cursor: pointer;
    border: 2px solid transparent;
}

.img__agents{
    width: 200px;
    height: auto;
}

.card__agent:hover {
    background-color: rgba(95, 98, 146, 0.4);
    border-color: var(--cor-botao);
    transform: translateY(-5px);
}

.agent__placeholder {
    width: 100%;
    height: 150px;
    background-color: rgba(127, 140, 170, 0.5);
    border-radius: 8px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 3em;
    font-weight: bold;
    color: var(--cor-texto);
    margin-bottom: 1em;
}



.agent__nome {
    font-size: 1.2em;
    color: var(--cor-terciaria);
    margin: 0.5em 0;
}

.agent__descricao {
    font-size: 0.9em;
    color: var(--cor-texto);
    font-weight: 400;
    margin: 0;
}

/* Responsividade */
@media (max-width: 1200px) {
    .grid__agents {
        grid-template-columns: repeat(3, 1fr);
    }
}

@media (max-width: 768px) {
    .grid__agents {
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5em;
    }
    
    .lista__categorias {
        gap: 1em;
        font-size: 0.9em;
    }
}

@media (max-width: 480px) {
    .grid__agents {
        grid-template-columns: 1fr;
    }
}