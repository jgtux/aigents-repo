# groq Configuration
GROQ_API_KEY=your_groq_api_key_here

# WebSocket Server Configuration
WS_HOST=localhost
WS_PORT=8765

# Agent Configuration
MAX_CACHE_SIZE=50

# Chat memory limits
MAX_CHAT_CACHE_SIZE=100        # Max number of chats in memory
MAX_CHAT_MESSAGES=200          # Max messages per chat
MAX_CHAT_TOKENS=50000          # Max tokens per chat (~200KB text)

# LLM Configuration
LLM_MODEL=llama-3.3-70b-versatile
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Context Window Management (prevents hallucinations in long chats)
MAX_CONTEXT_MESSAGES=20
CONTEXT_STRATEGY=sliding_window
